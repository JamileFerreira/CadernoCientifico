<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/capa1"
    tools:context="com.example.jamile.cadernocientifico14.Inicio">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:src="@drawable/sf"
        android:id="@+id/img"
        android:visibility="gone"
         />

    <Button
        android:text="CAMERA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btcam"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btimg"
        android:layout_alignStart="@+id/btimg"
        android:layout_marginBottom="200dp" />

    <Button
        android:text="GALERIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btimg"
        android:layout_above="@+id/btcam"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

</RelativeLayout>
